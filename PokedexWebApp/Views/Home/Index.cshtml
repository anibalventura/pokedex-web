@using Business.ViewModels;
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="text-white">All Pokemons</h3>
                </div>
                <div class="card-body">
                    <div class="row">

                        @foreach (PokemonViewModel item in Model)
                        {
                            <div class="col-4 mb-3">
                                <div class="card shadow-sm">
                                    <img src="@item.ImageUrl" class="img-product-size bd-placeholder-img card-img-top " />

                                    <div class="card-body">
                                        <h3>@item.Name</h3>
                                        <div>
                                            <small class="fw-bold">@item.PrimaryType.Name</small>
                                            @if (item.SecondaryType != null)
                                            {
                                                <small class="fw-bold">@item.SecondaryType.Name</small>
                                            }
                                            <small class="fw-bold">@item.Region.Name</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>