@using Business.ViewModels;
@model List<PokemonViewModel>
@{
    ViewData["Title"] = "Pokemons";
}

<div class="container-fluid">

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3 class="text-white">Pokemons Maintenance</h3>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-3 offset-9">
                            <a class="btn btn-outline-primary" asp-controller="Pokemon" asp-action="Create">Create</a>
                        </div>
                    </div>
                    <div class="row">
                        @foreach (PokemonViewModel item in Model)
                        {
                            <div class="col-4 mb-3">
                                <div class="card shadow-sm">
                                    <img src="@item.ImageUrl" class="img-product-size bd-placeholder-img card-img-top" />

                                    <div class="card-body">
                                        <h3>@item.Name</h3>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="Pokemon" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                                                <a asp-controller="Pokemon" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
