@model Business.ViewModels.SaveRegionViewModel
@{
    bool editMode = Model.Id == 0 ? true : false;
    ViewData["Title"] = editMode ? "Create Region" : "Edit Region";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-dark text-light">
                <h4>@(editMode ? "Create a new Region" : $"Editing the Region: {Model.Name}")</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Region" asp-action="@(editMode ? "Create" : "Edit")">

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="Name" class="form-label">Name: </label>
                        <input type="text" asp-for="Name" placeholder="Enter a name..." class="form-control shadow-sm">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="container-fluid text-center">
                        <button type="submit" class="btn btn-success shadow-sm">Save</button>
                        <a asp-controller="Region" asp-action="Index" class="btn btn-secondary shadow-sm">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
