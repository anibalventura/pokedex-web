@using Business.ViewModels;
@model List<RegionViewModel>
@{
    ViewData["Title"] = "Regions";
}

<div class="row justify-content-center">
    <div class="col-11">
        <div class="card shadow-sm">
            <div class="card-header bg-primary bg-opacity-75">
                <h3 class="text-white">
                    Regions Maintenance
                    <a class="btn btn-success shadow-sm" asp-controller="Region" asp-action="Create">Create</a>
                </h3>
            </div>
            @if (Model == null)
            {
                <div class="container-fluid text-center m-5">
                    <h4>No Regions created...</h4>
                    <h5>Start creating one!</h5>
                </div>
            }
            else
            {
                <div class="card-body">
                    <div class="row">
                        @foreach (RegionViewModel item in Model)
                        {
                            <div class="col-2 mb-3">
                                <div class="card shadow-sm">
                                    <div class="card-body">
                                        <h4>@item.Name</h4>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="btn-group">
                                                <a asp-controller="Region" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Edit</a>
                                                <a asp-controller="Region" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
